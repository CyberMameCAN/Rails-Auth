<h1>INDEX</h1>

<% if @user %>
<p>email:<%= @user.email %></p>
<p>ID:<%= @user.id %></p>

<table>
<thead>
<tr>
    <th>Todo</th>
    <th colspan="3"></th>
</tr>
</thead>
<tbody>
<% @user.tasks.each do |task| %>
<tr>
    <td><%= task.Title %></td>
    <td><%= link_to 'Show', task %></td>
    <td><%= link_to 'Edit', edit_task_path(task.id) %></td>
    <td>
    <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
</tr>
<% end %>
</tbody>
</table>

<%= link_to 'New Todo', new_task_path %> <%end%>